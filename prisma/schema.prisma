generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
}

enum VerificationType {
  EMAIL
}

enum ChallengeCategory {
  DAILY
  WEEKLY
  MONTHLY
  REGULAR
  TIMED
}

model User {
  id               String              @id @default(cuid())
  email            String              @unique
  username         String              @unique
  usernameLower    String              @unique
  pendingEmail     String?
  passwordHash     String
  emailVerifiedAt  DateTime?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  sessions         Session[]
  verification     VerificationToken[]
  passwordResets   PasswordResetToken[]
  completions      ChallengeCompletion[]
  levels           Level[]
  bannedUser       BannedUser?
  ratings          LevelRating[]
  scribbles        Scribble[]
  scribbleAttempts ScribbleAttempt[]
  progress         UserProgress?
}

model Session {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model ChallengeCompletion {
  id          String             @id @default(cuid())
  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  type        ChallengeCategory
  key         String
  periodStart DateTime
  completedAt DateTime           @default(now())

  @@unique([userId, type, key])
  @@index([type, completedAt])
}

model VerificationToken {
  id        String            @id @default(cuid())
  tokenHash String            @unique
  type      VerificationType  @default(EMAIL)
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  tokenHash String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Level {
  id          String   @id @default(cuid())
  name        String
  creatorName String?
  creator     User?    @relation(fields: [creatorId], references: [id], onDelete: SetNull)
  creatorId   String?
  functionTex String
  difficulty  String
  isTimed     Boolean  @default(false)
  timeLimit   Int?
  zoomLimit   Float?
  visibility  String   @default("PUBLIC")
  createdAt   DateTime @default(now())
  reports     Int      @default(0)
  ratings     LevelRating[]
}

model BannedUser {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique
  reason    String?
  bannedAt  DateTime @default(now())
}

model LevelRating {
  id        String   @id @default(cuid())
  rating    Int
  level     Level    @relation(fields: [levelId], references: [id], onDelete: Cascade)
  levelId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([levelId, userId])
}

model Scribble {
  id          String            @id @default(cuid())
  creatorName String?
  creator     User?             @relation(fields: [creatorId], references: [id], onDelete: SetNull)
  creatorId   String?
  points      String
  createdAt   DateTime          @default(now())
  attempts    ScribbleAttempt[]
}

model ScribbleAttempt {
  id          String   @id @default(cuid())
  scribble    Scribble @relation(fields: [scribbleId], references: [id], onDelete: Cascade)
  scribbleId  String
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId      String?
  userName    String?
  functionTex String
  accuracy    Float
  createdAt   DateTime @default(now())
}

model UserProgress {
  userId   String  @id
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  data     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
